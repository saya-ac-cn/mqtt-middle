<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ac.cn.saya.mqtt.middle.repository.IotProductTypeDAO">

    <resultMap type="iotCollection" id="IotCollectionMap">
        <result property="id" column="id"/>
        <result property="clientId" column="client_id"/>
        <result property="units" column="units"/>
        <result property="value" column="value"/>
        <result property="collectTime" column="collect_time"/>
        <association property="iotClient" javaType="iotClient">
            <result property="id" column="client_id"/>
            <result property="name" column="clientName"/>
            <result property="lastLinkTime" column="last_link_time"/>
            <association property="gateway" javaType="IotGateway">
                <id property="id" column="gateway_id" />
                <result property="name" column="gatewayName"/>
                <result property="address" column="address"/>
            </association>
        </association>
    </resultMap>

    <!--分页查询Iot采集信息-->
    <select id="queryPage" resultType="iotProductType">
        select
            a.`id`, a.`name`, a.`status`
        from iot_product_type a
        <where>
            <if test="id != null and id != 0">
                a.`id` = #{id}
            </if>
            <if test="status != null and status != 0">
                and a.`status` = #{status}
            </if>
            <if test="name != null and name != ''">
                and a.`name` like concat(#{name},"%")
            </if>
        </where>
        order by a.`id` desc
        limit #{startLine},#{endLine}
    </select>

    <!--查询Iot采集信息数量-->
    <select id="queryCount" resultType="java.lang.Long">
        select
            count(*)
        from iot_product_type a
        <where>
            <if test="id != null and id != 0">
                a.`id` = #{id}
            </if>
            <if test="status != null and status != 0">
                and a.`status` = #{status}
            </if>
            <if test="name != null and name != ''">
                and a.`name` like concat(#{name},"%")
            </if>
        </where>
    </select>

    <!--添加产品信息-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true" parameterType="iotProductType">
        insert into iot_product_type(`name`, `status`)
        values (#{name}, #{status})
    </insert>

    <!--修改产品信息-->
    <update id="update" parameterType="iotProductType">
        update iot_product_type
        <set>
            <if test="name != null and name != ''">
                `name` = #{name},
            </if>
            <if test="status != null and status != 0">
                `status` = #{status}
            </if>
        </set>
        where id = #{id}
    </update>

    <!--删除产品信息-->
    <delete id="delete" parameterType="java.lang.Integer">
        delete from iot_product_type where id = #{id}
    </delete>


</mapper>